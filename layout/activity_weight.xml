<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorPrimary"
    android:padding="55dp"
    tools:context=".Weight">
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:hint="Enter a Number"
        android:textColorHint="@color/colorWhite"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:inputType="numberDecimal|textMultiLine"

        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/gmTokg"

            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:text="Gram To Kilogram"
            />
        <RadioButton
            android:id="@+id/kgTogm"

            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorWhite"
            android:text="Kilogram To Gram"
            />
        <RadioButton
            android:id="@+id/kgToton"
            android:layout_marginTop="15dp"
            android:layout_width="230dp"
            android:layout_height="35dp"

            android:background="@color/colorWhite"
            android:text="Kilogram To Metric Ton"
            />
        <RadioButton
            android:id="@+id/tonTokg"

            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorWhite"
            android:text="Metric Ton to Kg"
            />
        <RadioButton
            android:id="@+id/kgTopound"

            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorWhite"
            android:text="Kilogram To Pound"
            />
        <RadioButton
            android:id="@+id/poundTokg"

            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorWhite"
            android:text="Pound To Kg"
            />


    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <Button
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:id="@+id/CancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>


</LinearLayout>